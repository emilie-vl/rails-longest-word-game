<div class="m-5">
  <h2>New</h2>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-center flex-wrap">
    <% @letters.each do |letter| %>
    <div class="letter-box"><%= letter %></div>
    <% end %>
  </div>
</div>

<div class="m-5">
  <p class="text-start">What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false">
    <div class="input-group mb-3">
      <input type="text" class="form-control" placeholder="Your answer" name="answer">
      <button class="btn btn-primary" type="submit" id="basic-addon2">Play</button>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
